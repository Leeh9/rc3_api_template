<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.map.MapFragment">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/ib_weather"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_white"
        android:src="@drawable/ib_weather" />

    <ImageButton
        android:id="@+id/ib_cur_loc"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        android:src="@drawable/ib_cur_loc" />

    <ImageButton
        android:id="@+id/ib_refresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/circle_white"
        android:src="@drawable/ib_refresh" />

    <ImageButton
        android:id="@+id/ib_bike_setting"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/circle_white"
        android:src="@drawable/ib_bike_setting" />


</FrameLayout>